{
  "compilerOptions": {
    "lib": ["es2021"],
    "types": ["node"],
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "strict": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist/",
    "target": "es2021",
    "sourceMap": false,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "credentials/**/*", 
    "nodes/**/*"
  ],
  "exclude": [
    "node_modules/**/*", 
    "dist/**/*", 
    "**/*.test.ts", 
    "**/*.spec.ts",
    "script/**/*",
    "gulpfile.js",
    "gulpfile.ts",
    "*.config.js",
    "*.config.ts",
    ".eslintrc.js",
    "jest.config.js",
    "prettier.config.js"
  ]
}