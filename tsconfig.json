{
	"compilerOptions": {
		"lib": [
			"es2017",
			"es2019",
			"es2021"
		],
		"types": [
			"node",
		],
		"module": "commonjs",
		"noImplicitAny": true,
		"removeComments": true,
		"strictNullChecks": true,
		"strict": true,
		"preserveConstEnums": true,
		"resolveJsonModule": true,
		"declaration": true,
		"outDir": "./dist/",
		"target": "es2021",
		"sourceMap": true,
		"esModuleInterop": true,
		"useUnknownInCatchVariables": false,
	},
	"include": [
		"credentials/**/*",
		"nodes/**/*",
		"nodes/**/*.json",
		"package.json",
	],
}
